  <script>
    const map = L.map('map').setView([54.5, -3.5], 6);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // Example marker
    L.marker([53.36923, -1.49044]).addTo(map)
      .bindPopup('"Dead Centre" of Sheffield')
      .openPopup();
  </script>
    <script>
    function toggleTheme() {
      const root = document.documentElement;
      const isLight = root.classList.toggle('light-theme');
      const comment = isLight
        ? "You've chosen the bright side. Bold choice."
        : "Back in the dark â€” just how the pixels like it.";
      alert(comment);
    }
  </script>
